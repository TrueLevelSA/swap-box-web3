{
  "name": "swap-box-web3",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MPL-2.0",
  "scripts": {
    "build:abis": "cd smart-contract/ && truffle compile",
    "build:types": "web3x-codegen && tsc",
    "build": "yarn build:abis && yarn build:types",
    "genkey": "node ./dist/src/accounts/createAccount.js",
    "addkey": "node ./dist/src/accounts/addAccount.js",
    "start": "yarn build && node ./dist/src",
    "start:dev": "nodemon ./dist/src/index.js",
    "test": "jest",
    "postinstall": "git submodule update --init && cd smart-contract/ && yarn install && yarn migrate"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@types/bip39": "^2.4.2",
    "@types/zeromq": "^4.6.1",
    "bn.js": "^5.0.0",
    "prompt": "^1.0.0",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3",
    "web3x": "^4.0.3",
    "zeromq": "^5.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.12",
    "jest": "^23.6.0",
    "nodemon": "^1.18.5",
    "web3x-codegen": "^4.0.1"
  }
}
